load("@rules_cc//cc:cc_binary.bzl", "cc_binary")
load("@rules_cc//cc:cc_library.bzl", "cc_library")
load("@rules_cc//cc:cc_test.bzl", "cc_test")
load("//bzl/macros:al_gen_changelog.bzl", "al_gen_changelog")
load("//bzl/macros:al_readme.bzl", "al_readme")
load("//bzl/rules/bzl:al_bzl_target_doc.bzl", "al_bzl_target_doc")

al_readme(
    name = "readme",
    visibility = ["//visibility:public"],
)

al_gen_changelog(
    name = "changelog",
    visibility = ["//visibility:public"],
)

cc_library(
    name = "lib",
    srcs = ["main.c"],
    deps = [
        ":cmd",
    ],
)

cc_binary(
    name = "bin",
    visibility = ["//visibility:public"],
    deps = [":lib"],
)

test_suite(
    name = "tests",
    tests = [":sri-test"],
)

cc_library(
    name = "cmd",
    srcs = ["cmd.c"],
    hdrs = ["cmd.h"],
    deps = [
        ":errors",
        ":sri",
    ],
)

cc_library(
    name = "sri",
    srcs = ["sri.c"],
    hdrs = ["sri.h"],
    deps = [
        ":errors",
        "@org-openssl-openssl//:openssl",
    ],
)

cc_test(
    name = "sri-test",
    size = "small",
    srcs = ["sri_test.c"],
    deps = [
        ":cmd",
    ],
)

cc_library(
    name = "errors",
    srcs = ["errors.c"],
    hdrs = ["errors.h"],
)

al_bzl_target_doc(
    name = "bazel_target_doc",
    visibility = ["//visibility:public"],
)
