load("@rules_pkg//pkg:mappings.bzl", "pkg_filegroup", "pkg_files", "strip_prefix")

pkg_filegroup(
    name = "layouts",
    srcs = [":layouts_files"],
    prefix = "layouts",
    visibility = ["//:__subpackages__"],
)

pkg_files(
    name = "layouts_files",
    srcs = glob(["*/**"]),
    strip_prefix = strip_prefix.from_pkg(),
)
