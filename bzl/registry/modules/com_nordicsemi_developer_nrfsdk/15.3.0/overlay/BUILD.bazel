load("@rules_pkg//pkg:tar.bzl", "pkg_tar")

filegroup(
    name = "src_filegroup",
    srcs = glob(["**"]),
    visibility = ["//:__subpackages__"],
)

pkg_tar(
    name = "src_tar",
    srcs = [":src_filegroup"],
    remap_paths = {"external/{}/".format(repo_name()): ""},
    strip_prefix = ".",
    visibility = ["//:__subpackages__"],
)
