load("@bazel_skylib//rules:build_test.bzl", "build_test")
load("@rules_cc//cc:cc_binary.bzl", "cc_binary")
load("@rules_cc//cc:cc_library.bzl", "cc_library")
load("@rules_cc//cc:cc_test.bzl", "cc_test")

build_test(
    name = "build_test",
    targets = [
        ":sri",
    ],
)

test_suite(
    name = "tests",
    tests = [":sri_test"],
)

cc_binary(
    name = "sri",
    visibility = ["//projects/sri/releases:__pkg__"],
    deps = [":lib"],
)

cc_library(
    name = "lib",
    srcs = ["main.c"],
    deps = [
        ":cmd",
    ],
)

cc_library(
    name = "cmd",
    srcs = ["cmd.c"],
    hdrs = ["cmd.h"],
    deps = [
        ":errors",
        ":sri_lib",
    ],
)

cc_library(
    name = "sri_lib",
    srcs = ["sri.c"],
    hdrs = ["sri.h"],
    deps = [
        ":errors",
        "@org_openssl_openssl//:openssl",
    ],
)

cc_test(
    name = "sri_test",
    size = "small",
    srcs = ["sri_test.c"],
    deps = [
        ":cmd",
    ],
)

cc_library(
    name = "errors",
    srcs = ["errors.c"],
    hdrs = ["errors.h"],
)
