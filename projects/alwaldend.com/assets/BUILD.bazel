load("@rules_pkg//pkg:mappings.bzl", "pkg_filegroup", "pkg_files", "strip_prefix")

pkg_filegroup(
    name = "assets",
    srcs = [
        ":assets_files",
    ],
    prefix = "assets",
    visibility = ["//projects/alwaldend.com:__pkg__"],
)

pkg_files(
    name = "assets_files",
    srcs = glob(
        ["**"],
        exclude = [
            "README.md",
            "BUILD.bazel",
        ],
    ),
    strip_prefix = strip_prefix.from_pkg(),
)
