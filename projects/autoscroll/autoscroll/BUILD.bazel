load("@rules_python//python:defs.bzl", "py_binary", "py_library")

filegroup(
    name = "autoscroll_data",
    srcs = glob(["resources/**"]),
    visibility = ["//:__subpackages__"],
)

py_library(
    name = "autoscroll_lib",
    srcs = [
        "__init__.py",
        "main.py",
