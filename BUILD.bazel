BUILDIFIER_EXCLUDE = [
    "./.git/**/*",
    "bazel-*",
]

exports_files([
    "LICENSE.txt",
    ".editorconfig",
    "pyproject.toml",
])

buildifier(
    name = "buildifier",
    exclude_patterns = BUILDIFIER_EXCLUDE,
)

buildifier_test(
    name = "buildifier-test",
    size = "small",
    exclude_patterns = BUILDIFIER_EXCLUDE,
    no_sandbox = True,
    workspace = "//:BUILD.bazel",
)

npm_link_all_packages(
    name = "node_modules",
)

