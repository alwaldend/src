    gazelle = ":gazelle-bin",
)

gazelle_binary(
    name = "gazelle-bin",
    languages = DEFAULT_LANGUAGES + [
        "@contrib_rules_jvm//java/gazelle",
    ],
)

refresh_compile_commands(
    name = "refresh_compile_commands",
)

al_genrule(
    name = "update-readme",
    outs = ["update-readme-bin"],
    cmd = """
cat - >$(execpath :update-readme-bin) <<EOF
    #!/usr/bin/env bash
    set -euxo pipefail
    env
    dir="\\${BUILD_WORKING_DIRECTORY}"
    replacement=\\$($(rootpath //golang/readme-tree) parse -C "\\${dir}" -g -o markdown .)
    $(rootpath //python/replace-section) -i -s README_CONTENTS -r "\\${replacement}" "\\${dir}/README.md"
EOF
    """,
    executable = True,
    tools = [
        "//golang/readme-tree",
        "//python/replace-section",
    ],
)
