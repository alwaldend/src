load("@rules_pkg//pkg:tar.bzl", "pkg_tar")
load("//bzl/macros:al_readme.bzl", "al_readme")
load("//bzl/macros:al_toml_data.bzl", "al_toml_data")
load("//bzl/rules:al_hugo_site.bzl", "al_hugo_site")
load("//bzl/rules:al_hugo_site_binary.bzl", "al_hugo_site_binary")

al_hugo_site(
    name = "misc",
    config = ":hugo.toml",
    content = "//md/misc",
    env = {
        "PATH": ":".join((
            "$${PWD}/$$(dirname $(execpath //tools:postcss))",
            "$${PATH}",
        )),
        "BAZEL_BINDIR": "$${PWD}/$(BINDIR)",
    },
    themes = "//hugo/themes",
    tools = [
        "//tools:postcss",
    ],
)

al_hugo_site_binary(
    name = "serve",
    arguments = ["serve"],
    site = ":misc",
)

al_toml_data(
    name = "hugo-config",
    srcs = ["hugo.toml"],
)

al_readme(
    name = "readme",
    visibility = ["//visibility:public"],
)
